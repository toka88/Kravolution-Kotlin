<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gorantokovic.kravolution">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gorantokovic.kravolution.ui.activities.dojo.DojoActivity" />
        <activity android:name="com.gorantokovic.kravolution.ui.activities.mybelt.MyBeltActivity" />
        <activity android:name="com.gorantokovic.kravolution.ui.activities.navigation.NavigationActivity" />
        <activity android:name="com.gorantokovic.kravolution.ui.activities.auth.ResetPasswordActivity" />
        <activity android:name="com.gorantokovic.kravolution.ui.activities.auth.ForgotPasswordActivity" />
        <activity android:name="com.gorantokovic.kravolution.ui.activities.auth.BaseAuthActivity" />
        <activity android:name="com.gorantokovic.kravolution.ui.activities.auth.RegisterActivity" />
        <activity android:name="com.gorantokovic.kravolution.ui.activities.auth.LoginActivity" />
        <activity android:name="com.gorantokovic.kravolution.ui.activities.onboarding.OnboardingActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>