<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Activity title -->
    <style name="TitleTextType">
        <item name="fontFamily">@font/gigalypse</item>
        <item name="android:textSize">@dimen/font_size_extra_large</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PrimaryMenuItem" parent="LightText">
        <item name="fontFamily">@font/gigalypse</item>
        <item name="android:textSize">@dimen/font_menu_item_size</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SecondaryMenuItem" parent="LightText">
        <item name="fontFamily">@font/cairo</item>
        <item name="android:textSize">@dimen/font_size_extra_small</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--  EditText -->
    <style name="InputTextType">
        <item name="fontFamily">@font/helvetica_neu</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <!--    Info text-->
    <style name="InfoTextType">
        <item name="fontFamily">@font/helvetica_neu</item>
        <item name="android:textSize">@dimen/font_size_extra_normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--    Use for primary and secondary button-->
    <style name="PrimaryActionTextType">
        <item name="fontFamily">@font/gigalypse</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SecondaryActionTextType">
        <item name="fontFamily">@font/cairo_semibold</item>
        <item name="android:textSize">@dimen/font_size_extra_normal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TermsAndConditions">
        <item name="fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textSize">@dimen/font_size_extra_small</item>
    </style>

    <style name="LightText">
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <!--    Calendar    -->
    <style name="DayInWeekText">
        <item name="fontFamily">@font/gigalypse</item>
        <item name="android:textSize">@dimen/font_size_extra_small</item>
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DayInMonthText">
        <item name="fontFamily">@font/gigalypse</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="EventStartsAt">
        <item name="font">@font/cairo_bold</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="EventEndsAt" parent="EventStartsAt">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>